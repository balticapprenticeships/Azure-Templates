{
    "$schema": "https://schema.management.azure.com/schemas/0.1.2-preview/CreateUIDefinition.MultiVm.json#",
    "handler": "Microsoft.Azure.CreateUIDef",
    "version": "0.1.2-preview",
    "parameters": {
        "basics": [],
        "steps": [
            {
                "name": "virtualMachineConfig",
                "label": "Virtual Machine Configuration",
                "elements": [
                    {
                        "name": "virtualMachineInstance",
                        "type": "Microsoft.Common.Section",
                        "label": "Virtual Machine Instance",
                        "elements": [
                            {
                                "name": "virtualMchineName",
                                "type": "Microsoft.Common.TextBox",
                                "label": "Virtual Machine Name",
                                "placeholder": "e.g. 306Client",
                                "defaultValue": "",
                                "constraints": {
                                    "regex": "^[a-z0-9A-Z]{3,10}$",
                                    "validationMessage": "The VM name must be between 3 and 10 characters long and contain only letters, numbers and hyphens.",
                                    "required": true
                                },
                                "toolTip": "This is the name of the Virtual Machine e.g. 306Client"
                            },
                            {
                                "name": "virtualMachineCount",
                                "type": "Microsoft.Common.TextBox",
                                "label": "Number of Virtual Machines",
                                "defaultValue": "",
                                "maxValue": 20,
                                "placeholder": "e.g. 2",
                                "constraints": {
                                    "regex": "^[0-9]$",
                                    "validationMessage": "Please select the number of virtual machines to create between 1 and 20.",
                                    "required": true
                                },
                                "toolTip": "Here you can select the number of virtual machine you require upto a maximum of 20."
                            },
                            {
                                "name": "osPlatform",
                                "type": "Microsoft.Common.OptionsGroup",
                                "label": "Platform",
                                "defaultValue": "Linux",
                                "constraints": {
                                    "allowedValues": [
                                        {
                                            "label": "Microsoft",
                                            "value": "Windows"                                            
                                        },
                                        {
                                            "label": "Linux",
                                            "value": "Linux"                                            
                                        }
                                    ],
                                    "required": true
                                },
                                "visible": true

                            },
                            {
                                "name": "virtualMachineSize",
                                "type": "Microsoft.Compute.SizeSelector",
                                "label": "Virtual Machine Size",
                                "recommendedSizes": [
                                    "Standard_D2s_v3"
                                ],
                                "constraints": {
                                    "allowedSizes": [
                                        "Standard_B1ms",
                                        "Standard_D2s_v3"
                                    ]
                                },
                                "osPlatform": "[equals(steps('virtualMachineConfig').osPlatform)]",
                                "toolTip": "Here you can select the size of your virtual machine(s), which will include the no. of vCPUs and the amount of ram.",
                                "visible": "[if(equals(parameters('osPlatform'), 'Windows'), 'true', 'false')]"
                            }
                        ]
                    }
                ]
            },
            {
                "name": "osConfig",
                "label": "OS Details",
                "elements": []
            },
            {
                "name": "userAccountConfig",
                "label": "User Account Details",
                "elements": [
                    {
                        "name": "adminAccountConfig",
                        "type": "Microsoft.Common.Section",
                        "label": "Administrator Account",
                        "elements": []
                    },
                    {
                        "name": "userAccountConfig",
                        "type": "Microsoft.Common.Section",
                        "label": "Non Admin account",
                        "elements": []
                    }
                ]
            },
            {
                "name": "tags",
                "label": "Tags",
                "elements": [
                    {
                        "name": "tagsMessage",
                        "type": "Microsoft.Common.TextBlock",
                        "options": {
                            "text": "Tags are name/value pairs that enable you to categorize resources and view consolidated billing by applying the same tag to multiple resources and resource groups."
                        }

                    }
                ]
            }
        ],
        "outputs": {}
    }
}